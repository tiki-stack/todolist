<%- include("header") -%>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

    <% newListItems.forEach((item) => {%>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" onchange="this.form.submit()" name=checkbox value=<%=item._id%>>
          <p> <%= item.name %></p>
          <input type="hidden" name="listTitle" value="<%= listTitle %>">
        </div>
      </form>

    <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" autocomplete="off" name="newItem" placeholder="New Item">
        <button type="sumbit" name="list" value=<%= listTitle %>>+</button>
      </form>
  </div>

